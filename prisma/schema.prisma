// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model users {
  id         String  @id
  company_id String  @unique
  email      String
  password   String
  role       String
  name       String
  cpf_cnpj   String
  phone      String
  is_active  Boolean
}

model companies {
  id               String    @id
  title            String    @unique
  description      String
  sector           String
  goal             String
  cnpj             String?
  project_time     Int?
  challenges       String?
  team_size        Int?
  project_started  String?
  website          String?
  ip               Boolean?  @default(false)
  resources        String?
  resources_needed String?
  mvp              Boolean?  @default(false)
  incoming_model   String?
  created_at       DateTime  @default(now())
  updated_at       DateTime?
  deleted_at       DateTime?
}

model companies_progress {
  id                          String    @id
  company_id                  String
  canvas                      String?
  canvas_score                Int?
  pitch                       String?
  pitch_score                 Int?
  ip                          String?
  ip_score                    Int?
  development_state           String?
  development_state_score     Int?
  solution_definition         String?
  solution_definition_score   Int?
  needed_resources            String?
  needed_resources_score      Int?
  ecosystem                   String?
  ecosystem_score             Int?
  definition_validation       String?
  definition_validation_score Int?
  clients                     String?
  clients_score               Int?
  concurrency_analysis        String?
  concurrency_analysis_score  Int?
  market_size                 String?
  market_size_score           Int?
  incoming_method             String?
  incoming_method_score       Int?
  mvp                         String?
  mvp_score                   Int?
  feedback_cycle              String?
  feedback_cycle_score        Int?
  created_at                  DateTime  @default(now())
  updated_at                  DateTime?
  deleted_at                  DateTime?
}

model topics_scores {
  id          String    @id
  topic       String
  progress_id String
  score       Int
  group       String
  created_at  DateTime  @default(now())
  updated_at  DateTime?
  deleted_at  DateTime?
}

model topics_scores {
  id          String    @id
  topic       String
  progress_id String
  score       Int
  group       String
  created_at  DateTime  @default(now())
  updated_at  DateTime?
  deleted_at  DateTime?
}
